<style>
  iframe {
    content-visibility: auto;
  }

  a {
    color: var(--color-text);
    transition: color 0.2s;
  }

  section {
    width: 100%;
  }
  * {
    font-family: var(--base-font-family-alegreya);
  }
  h2 {
    margin-block-start: var(--gutter-l);
  }

  .sns {
    width: 100%;
    display: flex;
    gap: 1rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .upcoming-event {
    margin-top: 4rem;
    margin-bottom: 4rem;
    font-family: inherit;
  }

  .upcoming-event h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .upcoming-event p {
    line-height: 1.5;
  }

  .link {
    font-style: italic;
    display: inline-block;
  }
  .grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr 1fr;
  }

  .podcast {
    iframe {
      width: 100%;
    }
  }
  .etc {
    ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
  }
