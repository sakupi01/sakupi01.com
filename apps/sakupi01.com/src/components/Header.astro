---
import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";
import SoundIcon from "./SoundIcon.astro";
import ThemeIcon from "./ThemeIcon.astro";
---
<header>
    <div class="left">
        <Logo />
    </div>
    <div class="right">
        <Navigation />
        <ThemeIcon />
        <SoundIcon />
    </div>
</header>

<style>
    header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: var(--header-text);
    padding: .5rem;
    font-family: var(--font-family-operator);
    font-style: italic;
    font-weight: 600;
    font-optical-sizing: auto;
    margin-block-start: var(--gutter-s);
    margin-block-end: var(--gutter-s);
    }
    .right {
    display: flex;
    align-items: center;
    gap: 1rem;
    }
</style>