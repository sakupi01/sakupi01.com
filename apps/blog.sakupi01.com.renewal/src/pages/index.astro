---
import BlogPostCard from "../components/BlogPostCard.astro";
import { allBlogPosts } from "../utils/contents";
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<h1 class="title">
	  <em>Blog Archive</em>
  	</h1>
	<ul class="posts">
		{allBlogPosts.map((post) => <BlogPostCard url={post.slug} title={post.data.title} date={post.data.date} excerpt={post.data.excerpt} />)}
	</ul>
</Layout>

<style>
  .title {
	  font-family: var(--font-family-operator);
    font-weight: 600;
    letter-spacing: .03em;
  }
  .posts {
    display: grid;
    gap: 1rem;
    padding: 1rem 0;
  }
</style>