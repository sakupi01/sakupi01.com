---
import BlogPostCard from "../components/BlogPostCard.astro";
import { allPosts } from "../utils/contents";
import Layout from "../layouts/Layout.astro";
import Title from "../components/Title.astro";
---

<Layout>
  <Title title="Archive ..." />
	<ul class="posts">
		{allPosts.map((post) => <BlogPostCard url={post.slug} title={post.data.title} date={post.data.date} excerpt={post.data.excerpt} />)}
	</ul>
</Layout>

<style>
  .posts {
    display: grid;
    gap: 1rem;
    padding: 1rem 0;
  }
</style>