---
import BlogPostCard from "../../components/BlogPostCard.astro";
import Layout from "../../layouts/Layout.astro";
import Title from "../../components/Title.astro";
import { allLifePosts } from "../../utils/contents";
---

<Layout pageTitle="saku's Lifeblog">
  <Title title="Life Articles Archive ..." />
	<ul class="posts">
		{allLifePosts.map((post) => <BlogPostCard url={post.slug} title={post.data.title} date={post.data.date} excerpt={post.data.excerpt} />)}
	</ul>
</Layout>

<style>
  .posts {
    display: grid;
    gap: 1rem;
    padding: 1rem 0;
  }
</style>