---
import { getCollection } from "astro:content";
import Layout from "../../../layouts/Layout.astro";
import BlogPostCard from "../../../components/BlogPostCard.astro";
const allLifeBlogPosts = (await getCollection("blog")).filter((entry) =>
  entry.slug.startsWith("life"),
);
allLifeBlogPosts.sort((a, b) => {
  return new Date(b.data.date).getTime() - new Date(a.data.date).getTime();
});
---

<Layout pageTitle="saku's Lifeblog">
  <h1 class="title"><em>Life Articles Archive</em></h1>
	<ul class="posts">
		{allLifeBlogPosts.map((post) => <BlogPostCard url={post.slug} title={post.data.title} date={post.data.date} excerpt={post.data.excerpt} />)}
	</ul>
</Layout>

<style>
  .title {
	  font-family: var(--font-family-operator);
    font-weight: 600;
    letter-spacing: .03em;
  }
  .posts {
    display: grid;
    gap: 1rem;
    padding: 1rem 0;
  }
</style>