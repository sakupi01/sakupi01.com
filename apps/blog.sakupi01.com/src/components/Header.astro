---
import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";
import SoundIcon from "./SoundIcon.astro";
import ThemeIcon from "./ThemeIcon.astro";
---
<header>
    <div class="left">
        <Logo />
    </div>
    <div class="right">
        <Navigation />
        <ThemeIcon />
        <SoundIcon />
    </div>
</header>

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
    }
    .right {
    display: flex;
    align-items: center;
    gap: 1rem;
    }
    @media (max-width: 768px) {
        header {
            flex-direction: column;
            align-items: flex-start;
        }
        .left {
            margin-bottom: 1rem;
        }
        .right {
            width: 100%;
            #soundToggle {
                display: none;
            }
        }
    }
    
</style>