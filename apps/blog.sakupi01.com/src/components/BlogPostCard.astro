---
import {
  convertToValidTimeDateString,
  formatRFC2822Date,
} from "../utils/formatRFC2822Date";

const { url, title, date, excerpt } = Astro.props;
---

<li class="blog-post-card">
  <a href={url} class="title-container">
    <p class="published">
      Published on <time datetime={convertToValidTimeDateString(date)}
        >{formatRFC2822Date(date)}</time
      >
    </p>
    <h2 class="title">{title}</h2>
  </a>
  <p class="excerpt">{excerpt}</p>
  <div>
    <a href={url}>Read more...</a>
  </div>
</li>

<style>
  .blog-post-card {
    list-style: none;
    display: grid;
    grid-template-rows: auto;
    .title-container {
      color: var(--color-text);
      border-bottom: none;
      outline: none;
      .title {
        letter-spacing: 0.03rem;
        text-wrap: pretty;
        font-size: 1.3rem;
        margin-block: var(--gutter-xs);
      }

      .published {
        margin-block: 0;
      }
    }
    .excerpt {
      text-wrap: pretty;
      margin-block: 0;
    }
  }
</style>
